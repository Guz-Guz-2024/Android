<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/black"
    android:gravity="center">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvendio a la Cevichería Conchita Rica, Cliente!"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:layout_marginBottom="20dp"/>

    <!-- Título de la lista de platos -->
    <TextView
        android:id="@+id/tituloListaPlatos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lista de Platos"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:layout_marginBottom="20dp"
        android:gravity="center"/>

    <!-- RecyclerView para mostrar productos -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewProductos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Botón para agregar productos al pedido -->
    <Button
        android:id="@+id/btnAgregarPedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ir al Carrito"
        android:textSize="16sp"
        android:layout_marginTop="20dp"/>

    <!-- Botón de Cerrar sesión -->
    <Button
        android:id="@+id/btnCerrarSesion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cerrar Sesión"
        android:textSize="16sp"
        android:layout_marginTop="20dp"/>
</LinearLayout>
